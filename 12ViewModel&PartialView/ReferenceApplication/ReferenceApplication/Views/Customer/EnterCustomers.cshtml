
@model ReferenceApplication.ViewModel.CustomerVM
@using ReferenceApplication.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EnterCustomers</title>
</head>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<body>
    <div> 
        
            @using (Html.BeginForm("Submit","Customer", FormMethod.Post))
            { 
            <i>Enter Customer Name :</i>@Html.TextBoxFor(m => m.Customer.CustomerName) <br />
            @Html.ValidationMessageFor(x => x.Customer.CustomerName) <br/>
            <i>Enter Customer Code :</i> @Html.TextBoxFor(m => m.Customer.CustomerCode) <br />
            @Html.ValidationMessageFor(x => x.Customer.CustomerCode)<br />
            <input id="Submit1" type="submit" value="submit" />
            }
        <br/>
       @Html.Partial("DisplayCustomers", Model);
      



    </div>
</body>
</html>
